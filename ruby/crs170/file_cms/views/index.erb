  <ul>
    <% session[:files].each do |filename| %>
      <% clean_name = clean_filename(filename) %>
      <li>
        <a href="/<%= clean_name %>"><%= clean_name %></a>
        <a href="/<%= clean_name %>/edit">Edit Document</a>
        <form class="inline" action="/<%= clean_name %>/duplicate" method="post">
          <button type="submit">Duplicate</button>
        </form>
        <form class="inline" action="/<%= clean_name %>/delete" method="post">
            <button type="submit">Delete</button>
        </form>
      </li>
    <% end %>
  </ul>

  <p><a href="/new">New Document</a></p>

<% unless session[:username] %>

<form action="users/signin" method="get">
  <button type="submit" >Sign in</button>
</form>

<% end %>
