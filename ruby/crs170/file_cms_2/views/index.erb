<ul>
  <% @files.each do |file| %>
    <% filename = shortname(file) %>
    <li>
      <a href="/<%= filename %>"><%= filename %></a> 
      <a href="/<%= filename %>/edit">Edit</a>
      <form class="inline" action="/<%= filename %>/delete" method="post">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% end %>
</ul>
<p><a href="/new">New Document</a></p>
<% if session[:user] %>
  <form action="/users/signout" method="post"> 
    <p class="signin_status">
      Signed in as <%= session[:user] %>.
      <button type="submit">Sign Out</button>
    </p>
  </form>
<% else %>
  <form action="/users/signin" method="get">
    <p class="signin_status"><p class="signin_status">
      Not signed in.
      <button type="submit">Sign In</button>
    </p>
  </form>
<% end %>
  
  

